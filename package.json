{
  "name": "ccbranch-cli",
  "version": "1.0.0",
  "description": "Concourse resource allowing mutliple branch to run on a specific pipeline",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prepublish": "npm run build",
    "dev": "ts-node src/index.ts",
    "coverage": "npx -- nyc mocha --reporter spec --require ts-node/register 'test/**/*.test.ts' --exit",
    "coverage:junit": "npx -- nyc mocha --reporter mocha-junit-reporter --require ts-node/register 'test/**/*.test.ts' --reporter-options mochaFile=./coverage/test-results.xml --exit",
    "test": "npx -- mocha --reporter spec --require ts-node/register 'test/**/*.test.ts' --exit",
    "test:junit": "npx -- mocha --reporter mocha-junit-reporter --require ts-node/register 'test/**/*.test.ts' --reporter-options mochaFile=./coverage/test-results.xml --exit",
    "test:debug": "npx -- mocha --inspect-brk --reporter spec --require ts-node/register 'test/**/*.test.ts' --exit"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/core-js": "^2.5.2",
    "@types/inquirer": "^6.5.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.1",
    "@types/ora": "^3.2.0",
    "chai": "^4.2.0",
    "dts-generator": "^3.0.0",
    "mocha": "^6.2.2",
    "mocha-junit-reporter": "^1.23.1",
    "nyc": "^15.0.0",
    "ts-node": "^8.5.4",
    "tsc-watch": "^4.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4",
    "typings": "^2.1.1"
  },
  "dependencies": {
    "axios": "^0.19.1",
    "boxen": "^4.2.0",
    "chalk": "^3.0.0",
    "child-process-promise": "^2.2.1",
    "commander": "^4.1.0",
    "core-js": "^3.6.3",
    "inquirer": "^7.0.3",
    "ora": "^4.0.3",
    "spawn-promise": "^0.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjghali/concourse-multibranch.git"
  },
  "author": "Joshua Ghali <joshua.ghali@gologic.ca>",
  "license": "ISC",
  "bin": {
    "ccbranch": "./dist/index.js"
  },
  "bugs": {
    "url": "https://github.com/jjghali/concourse-multibranch/issues"
  },
  "homepage": "https://github.com/jjghali/concourse-multibranch#readme"
}
